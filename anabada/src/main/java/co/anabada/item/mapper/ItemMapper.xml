<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.anabada.item.ItemMapper">

  <select id="selectItem" parameterType="int"> 
  <!--  
  
  resultType="Item" >
  -->
    select    item_num,
              category_id,
              member_num,
              item_name,
              item_price,
              item_image,
              item_info,
              item_status,
              item_date
      from    item
      where   item_num = #{ino}
  </select>

</mapper>